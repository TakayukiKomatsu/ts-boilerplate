{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "target": "ESNext",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "esModuleInterop": true,
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@/*": ["*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["src", "tests"]
}
