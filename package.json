{
  "name": "boilerplate",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Boilerplate for NodeJs with Typescript, Eslint. Prettier, Husky, Lint-staged and Vitest",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --no-cache src/index.ts",
    "clear": "rimraf dist",
    "build": "npm run clear && tsc -p tsconfig-build.json",
    "lint": "eslint **/*.ts --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest --passWithNoTests --config ./vite.config.ts ",
    "test:noWatch": "vitest --passWithNoTests --config ./vite.config.ts run",
    "test:coverage": "vitest --passWithNoTests --config ./vite.config.ts run --coverage",
    "test:changed": "vitest --passWithNoTests --config ./vite.config.ts --changed",
    "test:related": "vitest --passWithNoTests --config ./vite.config.ts related",
    "prepare": "husky install"
  },
  "keywords": [
    "boilerplate",
    "nodejs",
    "typescript",
    "eslint",
    "prettier",
    "husky",
    "vitest"
  ],
  "license": "MIT",
  "author": {
    "name": "Takayuki Komatsu",
    "email": "komatsutakayuki235@live.com"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.0.4"
  }
}
